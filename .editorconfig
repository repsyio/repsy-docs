[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.java]
indent_size = 4

[*.{kt, kts}]
indent_size = 4

[*.ts]
indent_size = 4

[*.sql]
indent_size = 4

[*.{yml, yaml}]
indent_size = 4
